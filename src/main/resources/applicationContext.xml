<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="tv" class="polymorphism.SamsungTV"
		destroy-method="destoryMethod" init-method="initMethod">
	<constructor-arg ref="apple" index="0"></constructor-arg>
	<constructor-arg value="2000000" index="1">
	</constructor-arg>
	<property name="speaker" ref="sony"></property>
	<property name="price" value="2200000"></property>
	</bean>
	<bean id="sony" class="polymorphism.SonySpeaker" lazy-init="true"></bean>
	<bean id="apple" class="polymorphism.AppleSpeaker"></bean>
</beans>
